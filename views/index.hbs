<!DOCTYPE html>
<html>
  <head>
    <title>EDA Phase 1 Express Boilerplate</title>
  </head>
  <body>
    <h1>Profiles</h1>

    <ul>
    {{#each users}}
      <li> <a href="/profile/{{id}}">{{name}}</a> </li>
    {{/each}}
    </ul>

    <form action="/newUser" method="post">
      <input name="name" placeholder="name">
      <input name="email" placeholder="email">
      <input name="url" placeholder="url">
      <input name="profilePic" placeholder="profile pic">
      <input type="submit">
    </form>

  </body>
</html>
